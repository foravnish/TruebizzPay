<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/info"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Confirm Recharge Information"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel_ly"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mob_num_txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_line_whitebg"
            android:gravity="center_vertical"
            android:hint="@string/enter_msg"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="@string/mobile"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/operator_txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_line_whitebg"
            android:gravity="center_vertical"
            android:hint="@string/enter_msg"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="@string/operator_"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/amt_txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_line_whitebg"
            android:gravity="center_vertical"
            android:hint="@string/enter_msg"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="@string/amount"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/srchrge_txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_line_whitebg"
            android:gravity="center_vertical"
            android:hint="@string/enter_msg"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="@string/surchareg"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ur_cst_txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/black_line_whitebg"
            android:gravity="center_vertical"
            android:hint="@string/enter_msg"
            android:inputType="textMultiLine"
            android:visibility="gone"
            android:padding="10dp"
            android:text="@string/ur_cost"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/cancel_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/subbmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:background="@color/colorPrimaryDark"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".01"
            android:background="@color/white" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".5"
            android:background="@color/colorPrimaryDark"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>